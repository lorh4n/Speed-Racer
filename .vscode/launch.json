{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Speed_Racer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Speed_Racer",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "/usr/share/vulkan/explicit_layer.d"
                },
                {
                    "name": "VK_INSTANCE_LAYERS", 
                    "value": "VK_LAYER_KHRONOS_validation"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build and Configure",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "logging": {
                "engineLogging": true
            }
        }
    ]
}