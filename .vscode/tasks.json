{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake -B build -S . && make -C build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila o projeto Speed Racer."
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./build/Speed_Racer",
            "dependsOn": "Build",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Executa o projeto Speed Racer."
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "./tools/build_and_run.sh",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "detail": "Compila e executa o projeto Speed Racer."
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf build/*",
            "detail": "Limpa o diret√≥rio de build."
        }
    ]
}
