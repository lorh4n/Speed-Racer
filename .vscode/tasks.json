{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "Configura o projeto CMake em modo Debug"
        },
        {
            "label": "Configure CMake Release",
            "type": "shell", 
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "Configura o projeto CMake em modo Release"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "Configure CMake Debug",
            "problemMatcher": ["$gcc"],
            "detail": "Compila o projeto em modo Debug"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "Configure CMake Release",
            "problemMatcher": ["$gcc"],
            "detail": "Compila o projeto em modo Release"
        },
        {
            "label": "Build and Configure",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Configure CMake Debug",
                "Build Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Configura e compila o projeto em modo Debug"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Remove o diret√≥rio de build"
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "./Speed_Racer",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "test",
            "dependsOn": "Build and Configure",
            "detail": "Executa o projeto compilado"
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build and Configure",
                "Run Project"
            ],
            "group": "test",
            "detail": "Compila e executa o projeto"
        }
    ]
}