{
    "version": "0.2.0",
    "configurations": [
      
        {
            "name": "Debug SpeedRacer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/SpeedRacer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "${env:VULKAN_SDK}/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Habilitar pretty-printing para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build SpeedRacer"
        }
    ]
}